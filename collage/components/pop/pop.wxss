/* components/pop/pop.wxss */
.alert-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.3;
}

.model {
  width: 599rpx;
  height: 715rpx;
  background: #FFFFFF;
  border-radius: 10px;
  position: fixed;
  top: 50%;
  left: 50%;
  z-index: 9999;
  transform: translate(-50%, -50%);
  padding: 30rpx;
}
.top{
  width: 504rpx;
  height: 400rpx;
  margin: 0 auto;
}
.top image {
  border-radius: 5px;
  height: 100%;
  width: 100%;
}

.center {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 0;
}

.center text {
  font-size: 30rpx;
  color: var(--themeColor);
}

.center .right {
  display: flex;
  align-items: center;
}

.reduce,
.plus {
  width: 55rpx;
  height: 55rpx;
  border: 1px solid rgb(233, 230, 230);
  border-radius: 50%;
  font-size: 45rpx;
  font-weight: bold;
  color: var(--themeColor);
  line-height: 45rpx;
  text-align: center;
}
.disabled{
  color: rgb(233, 230, 230);
}
.number{
  font-size: 34rpx;
  color: #5C5C5C;
  margin: 0 8px;
}

.footer{
  background: var(--themeColor) no-repeat;
  border-radius: 20px;
  text-align: center;
  font-size: 28rpx;
  color: #FFFFFF;
  height: 80rpx;
  line-height: 80rpx;
  letter-spacing: 1px;
  margin-top: 10px;
}
.close{
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto;
  margin-top: 40px;
}
