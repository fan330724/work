/* pages/appraise/appraise.wxss */
.box {
  padding: 30rpx;
}

.text {
  color: #424D57;
  font-size: 28rpx;
  margin-top: 10px;
}

.text textarea {
  border: 1px solid #ccc;
  margin-top: 10px;
  padding: 10rpx;
  height: 200rpx;
}

.uploader {
  display: flex;
  margin: 50rpx 0;
}

.uploader-list {
  width: 180rpx;
  height: 160rpx;
  position: relative;
  margin-right: 40rpx;
}

.uploader-list .delete {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 40rpx;
  height: 40rpx;
}

.upadd {
  width: 180rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f6f6f6;
  color: #999999;
  font-size: 24rpx;
}

.upadd view {
  font-size: 50rpx;
  color: #BEC1C5;
}

.upadd text {
  color: #BEC1C5;
  font-size: 20rpx;
  letter-spacing: 1px;
}

.btn {
  background: #296EFF;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  color: white;
  font-size: 34rpx;
  width: 80%;
  margin: 0 auto;
}