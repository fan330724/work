/* pages/my/my.wxss */
.header{
  background: url('http://web.yikang.co/images/my-bg.png') no-repeat;
  background-size: 100% 100%;
  padding: 30rpx;
  height: 200rpx;
  display: flex;
  justify-content: space-between;
}
.left{
  display: flex;
  align-items: center;
}
.user-text{
  color: #FFFFFF;
  font-size: 28rpx;
  margin-top: 5px;
}
.right{
  display: flex;
  margin-top: 20px;
}
.right image{
  width: 40rpx;
  height: 40rpx;
}
.right .myset{
  margin-right: 10px;
}
.userinfo-avatar{
  width: 108rpx;
  height: 108rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 13px;
}
.userinfo-nickname{
  color: white;
  font-size: 32rpx;
}
.tabbar{
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 30rpx 0;
}
.list{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.title{
  color: #020C17;
  font-size: 28rpx;
  margin-bottom: 8px;
  font-weight: bold;
}
.number{
  color: var(--themeColor);
  font-size: 30rpx;
  font-weight: bold;
}
.number-color{
  color: #F27113;
}
.p-item{
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
}
.p-item view{
  display: flex;
  align-items: center;
}
.p-item image{
  width: 40rpx;
  height: 40rpx;
}
.p-item text{
  color: #020C17;
  font-size: 32rpx;
  margin-left: 32rpx;
  letter-spacing: 1px;
}

.icon text{
  font-size: 40rpx;
  font-weight: 600;
}

.btn{
  color: #E20A0A;
  font-size: 32rpx;
  position: fixed;
  bottom: 5%;
  left: 50%;
  transform: translateX(-50%);
}
.ava{
  background-color: var(--themeColor);
  padding: 20rpx 30rpx;
  color: #FFFFFF;
  border-radius: 20px;
  width: 300rpx;
  margin: 30rpx auto;
  text-align: center;
  letter-spacing: 1px;
}

