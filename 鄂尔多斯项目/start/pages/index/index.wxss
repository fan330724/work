/* pages/index/index.wxss */
.container{
  padding: 0 30rpx;
}
.page-body swiper{
  width: 750rpx;
  height: 360rpx;
}
.page-body swiper swiper-item{
  padding: 0 15rpx 0 0 !important
}
.page-body image{
  width: 100%;
  height: 100%;
  border-radius: 10px;
}

.list {
  padding: 30rpx 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.list .list-item {
  height: 165rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.list .list-item image {
  width: 90rpx;
  height: 90rpx;
}

.list .list-item text {
  font-size: 32rpx;
  color: #6D7275;
  letter-spacing: 1px;
  margin-top: 7px;
}

.footer-header{
  padding: 0 0 30rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  letter-spacing: 2px;
}
.footer-header text{
  font-size: 38rpx;
  color: #000000;
  font-weight: bold;
}
.footer-header .right{
  display: flex;
  align-items: center;
}
.footer-header .right text{
  font-size: 28rpx;
  color: #8C9198;
  font-weight: normal;
}
.footer-header .right image{
  width: 48rpx;
  height: 48rpx;
  border: none;
  margin-left: -5px;
}
.footer-header .right .icon text{
  font-size: 40rpx;
  font-weight: 600;
}


.tishi{
  width: 88%;
  background: #FFFFFF;
  padding: 30rpx;
  position: fixed;
  top: 0px;
  left: 50%;
  transform: translateX(-50%);
  box-shadow: 0 2px 8px rgba(113, 112, 112, .3);
  border-radius: 10px;
  z-index: 99999;
}
.tishi-title{
  font-size: 30rpx;
}