/* pages/home/index.wxss */
.container{
  padding: 0 30rpx;
}
.page-body swiper{
  width: 750rpx;
  height: 360rpx;
}
.page-body swiper swiper-item{
  padding: 0 15rpx 0 0 !important
}
.page-body image{
  width: 100%;
  height: 100%;
  border-radius: 10px;
}

.tab{
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 750rpx;
  background: white;
  padding: 20rpx 0;
  color: #5B5E63;
  margin-top: 20px;
}
.fontSize{
  color: #717377;
  font-size: 28rpx;
}
.active{
  color: #020C17;
  font-size: 32rpx;
}
.cur{
  width: 100%;
  height: 3px;
  background: linear-gradient(47deg, #E1201F 0%, #f31818 100%);
  border-radius: 5px;
  animation: name .5s ease;
  margin-top: 10rpx;
}
@keyframes name{
  0%{
    transform: scale(0);
  }
  100%{
    transform: scale(1);
  }
}

.mt{
  padding: 0 30rpx;
  padding-bottom: 20%;
}



.fail{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
}
.fail image{
  width: 500rpx;
  height: 540rpx;
  margin-bottom: 20rpx;
}

.button{
  position: fixed;
  bottom: 5%;
  left: 50%;
  transform: translateX(-50%);
  background: #E1201F;
  width: 574rpx;
  height: 74rpx;
  color: #ffffff;
  font-size: 32rpx;
  line-height: 74rpx;
  text-align: center;
  border-radius: 20px;
  letter-spacing: 1px;
}