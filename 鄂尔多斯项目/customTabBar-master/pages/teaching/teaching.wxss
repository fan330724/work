/* pages/teaching/teaching.wxss */

.leader {
  display: flex;
  padding: 20px 10px;
  box-shadow: 0 2px 8px rgba(113, 112, 112, .3);
  border-radius: 10px;
  margin: 10px 0;
}

.leader-img {
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
  margin-right: 10px;
}

.leader-img image {
  width: 100%;
  height: 100%;
}

.leader-content {
  width: 81%;
}

.leader-content .leader-title {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  font-size: 35rpx;
}

.leader-content .leader-subject {
  margin-top: 10rpx;
  font-size: 30rpx;
  color: #a7a7a7;
}