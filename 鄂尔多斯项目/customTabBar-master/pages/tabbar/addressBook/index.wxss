/* page/tabbar/pages/addressBook/index.wxss */
.box1{
  border-bottom: 1px solid #DE2020;
  padding: 30rpx;
}
.title{
  color: #282B32;
  font-size: 34rpx;
  margin-bottom: 5px;
}
.num{
  color: #6D7275;
  font-size: 24rpx;
}
.phone{
  color: #6D7275;
  font-size: 24rpx;
  margin-bottom: 5px;
}

.none{
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.none image{
  width: 500rpx;
  height: 540rpx;
}


.tab{
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  top: 0;
  width: 750rpx;
  background: transparent;
  padding: 15rpx 0;
  z-index: 99;
  color: #5B5E63;
}
.active{
  color: #020C17;
  font-size: 32rpx;
}
.cur{
  width: 100%;
  height: 3px;
  background: var(--themeColor);
  border-radius: 5px;
  animation: name .5s ease;
  margin-top: 10rpx;
}
@keyframes name{
  0%{
    transform: scale(0);
  }
  100%{
    transform: scale(1);
  }
}

.mt{
  margin-top: 80rpx;
  /* padding: 0 30rpx; */
  padding-bottom: 30rpx;
}


.titlestyle{
  background: none !important;
}
.msgstyle{
  background: none !important;
}