/* page/tabbar/pages/my/index.wxss */
page{
  background: none;
}
.header{
  background: url('https://stu.yikang.co/profile/upload/appraise/2022/03/30/c1b685479fb7805dd5638b967f6877a.png') no-repeat;
  background-size: 100% 100%;
  padding: 30rpx;
  height: 251rpx;
  display: flex;
  justify-content: space-between;
}
.left{
  display: flex;
  margin-top: 16px;
}
.user-text{
  color: #FFFFFF;
  font-size: 28rpx;
  margin-top: 5px;
}
.right{
  display: flex;
  margin-top: 20px;
}
.right image{
  width: 40rpx;
  height: 40rpx;
}
.right .myset{
  margin-right: 10px;
}
.userinfo-avatar{
  width: 108rpx;
  height: 108rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 13px;
}
.userinfo-nickname{
  color: white;
  font-size: 32rpx;
}
.tabbar{
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 40rpx 0;
  background: white;
  width: 93%;
  margin: 0 auto;
  margin-top: -50px;
  border-radius: 15px;
  box-shadow: 0 3px 6px 1px #EFEFEF;
}
.list{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.title{
  color: #020C17;
  font-size: 28rpx;
  margin-bottom: 8px;
  font-weight: bold;
}
.number{
  color: var(--themeColor);
  font-size: 30rpx;
  font-weight: bold;
}
.number-color{
  color: #F27113;
}
.p{
  margin-top: 20rpx;
}
.p-item{
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
}
.p-item view{
  display: flex;
  align-items: center;
}
.p-item image{
  width: 40rpx;
  height: 40rpx;
}
.p-item text{
  color: #020C17;
  font-size: 32rpx;
  margin-left: 32rpx;
  letter-spacing: 1px;
}

.icon text{
  font-size: 40rpx;
  font-weight: 600;
}

.btn{
  color: #E20A0A;
  font-size: 32rpx;
  position: fixed;
  bottom: 13%;
  left: 50%;
  transform: translateX(-50%);
}
.ava{
  background-color: var(--themeColor);
  padding: 20rpx 30rpx;
  color: #FFFFFF;
  border-radius: 20px;
  width: 300rpx;
  margin: 30rpx auto;
  text-align: center;
  letter-spacing: 1px;
  height: 80rpx;
}

.ban{
  width: 670rpx;
  height: 120rpx;
  margin: 0 auto;
  margin-top: 30rpx;
}

