/* pages/login/login.wxss */
page{
  background: url('http://web.yikang.co/images/login-bg.png') no-repeat;
  background-size: 100% 100%;
}
.box{
  /* padding: 30rpx; */
  position: fixed;
  left: 50%;
  top: 35%;
  transform: translateX(-50%);
  width: 670rpx;
}
.title{
  width: 100%;
  height: 208rpx;
  margin-top: 30%;
}
.main{
  padding: 35rpx 30rpx;
  background: white;
  border-radius: 5px;
}
.h3{
  color: #020C17;
  font-size: 50rpx;
  padding-bottom: 15px; 
  /* text-align: center; */
}
.list{
  background: #F5F5F5;
  padding: 10px 0;
  border-radius: 5px;
}
.list input{
  padding-left: 10px;
  font-size: 28rpx;
}
.plaseholder{
  color: #BDC4CE;
}
.mar-top{
  margin-top: 15px;
}
.inp{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.inp input{
  flex: 1;
}
.inp image{
  width: 45rpx;
  height: 45rpx;
  margin-right: 15px;
}

.foot label{
  display: flex;
  align-items: center;
  color: #BDC4CE;
  font-size: 28rpx;
  margin: 15px 0;
}
.foot checkbox{
  transform: scale(.8);
}
.btn{
  background: #f80202;
  color: white;
  text-align: center;
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
  letter-spacing: 1px;
  /* margin-bottom: 15px; */
}
.pass{
  color: #BDC4CE;
  font-size: 28rpx;
  width: 155rpx;
}