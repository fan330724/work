/* pages/playback/playback.wxss */
.video_cover {
  width: 100%;
  height: 100%;
  position: relative;
}

.video_bg_black {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, .5);
}
.video_bg_btn{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border: 1px solid #FFFFFF;
  border-radius: 30px;
  width: 320rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #FFFFFF;
  font-size: 28rpx;
}

.main{
  padding: 30rpx;
}
.title{
  color: #296EFF;
  font-size: 32rpx;
  margin-bottom: 10px;
}
.list{
  justify-content: space-between;
  color: #BEC1C5;
  font-size: 24rpx;
  padding: 10px 0;
  border-bottom: 1px solid #E6E8EB;
}
.left{
  width: 85%;
}
.top{
  color: #888D95;
  font-size: 28rpx;
  margin-bottom: 10px;
}
.top image{
  width: 40rpx;
  height: 30rpx;
  margin-right: 10px;
}
.footer-list{
  align-items: baseline !important;
  margin-bottom: 3px;
}
.text{
  flex: 0.9;
}
.txt{
  flex: 3.1;
}
.flex{
  display: flex;
  align-items: center;
}