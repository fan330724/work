/* pages/work/work.wxss */
.tab {
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  top: 0;
  width: 750rpx;
  background: white;
  padding: 15rpx 0;
  z-index: 99;
  color: #5B5E63;
}

.active {
  color: var(--themeColor);
  font-size: 32rpx;
}

.cur {
  width: 100%;
  height: 3px;
  background: var(--themeColor);
  border-radius: 5px;
  animation: name .5s ease;
  margin-top: 10rpx;
}

@keyframes name {
  0% {
    transform: scale(0);
  }

  100% {
    transform: scale(1);
  }
}

.mt {
  margin-top: 110rpx;
  padding: 0 30rpx;
}
.fail{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-60%);
}
.fail image{
  width: 500rpx;
  height: 540rpx;
  margin-bottom: 20rpx;
}