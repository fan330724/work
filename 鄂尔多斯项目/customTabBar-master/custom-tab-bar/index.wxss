.tab-bar {
  position: fixed;
  bottom: 0px;
  left: 0px;
  right: 0px;
  width: 100%;
  height: 120rpx;
  background: #F21314;
  display: flex;
  flex-direction: row;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding-top: 17rpx;
}

.cover-image {
  width: 60rpx;
  height: 60rpx;
}

.tab-bar-item view {
  font-size: 25rpx;
}