/* components/approve/index.wxss */
.list{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px;
  margin: 10px 0;
  color: #5B5E63;
  font-size: 28rpx;
}
.flex{
  flex-direction: column;
  align-items: flex-start;
}
textarea{
  margin-top: 10px;
}
.select{
  color: #8C9198;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.btn{
  width: 650rpx;
  height: 88rpx;
  background: var(--themeColor);
  text-align: center;
  color: white;
  font-size: 34rpx;
  line-height: 88rpx;
  margin: 30px auto 0;
}
.butt{
  text-align: center;
  color: var(--themeColor);
  font-size: 30rpx;
  margin-top: 30rpx;
}