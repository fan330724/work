/* pages/detail/detail.wxss */
.box{
  padding: 30rpx;
}
.list-item{
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}
.list-item .span{
  margin-right: 20rpx;
}
.span .text{
  color: red;
  display: inline-block;
  position: relative;
  top: -5rpx;
  left: -4rpx;
}
.list-item input, .list-item textarea, .list-item picker{
  padding: 20rpx 10rpx;
  border: 1px solid #F5F5F5;
  flex: 1;
}
.picker{
  color: rgb(145, 139, 139);
}
button{
  margin-top: 30rpx;
}

.btn{
  text-align: center;
  margin-top: 30rpx;
  font-size: 30rpx;
}