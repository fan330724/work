/* pages/login/login.wxss */
/* 最大的父元素 */
.v1 {
  display: block;
  position: absolute;
  height: 100%;
  width: 100%;
  background: #356363;
  /* 换图片 */

}

/* 白色区域 */
.v1 .v2 {
  position: relative;
  width: 545rpx;
  height: 750rpx;
  background: #FFFFFF;
  border-radius: 50rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}

/* 白色区域内的登录文本 */
.v1 .v2 .dltext {
  margin-top: 50rpx;
  position: absolute;
  margin-left: 60rpx;
  width: 150rpx;
  height: 100rpx;
  font-size: 60rpx;
  font-family: Helvetica;
  color: #000000;
  line-height: 100rpx;
  letter-spacing: 2rpx;
}

/* 手机图片+输入框+下划线的父容器view */
.v1 .v2 .phoneCs {
  margin-top: 200rpx;
  margin-left: 35rpx;
  position: absolute;
  display: flex;
  width: 450rpx;
  height: 80rpx;
  border-bottom: 3rpx solid rgb(58, 57, 57);
}


/* 手机号输入框 */
.v1 .v2 .phoneCs input {
  font-size: 25rpx;
  margin-top: 15rpx;
  margin-left: 30rpx;
}

/* 密码图标+输入框+小眼睛图标+下划线父容器view */
.v1 .v2 .passwordCs {
  margin-top: 400rpx;
  margin-left: 35rpx;
  position: absolute;
  display: flex;
  width: 450rpx;
  height: 80rpx;
  border-bottom: 3rpx solid rgb(58, 57, 57);
}


/* 眼睛 图标*/
.v1 .v2 .passwordCs .eye {
  margin-top: 5rpx;
  margin-left: 65rpx;
  width: 55rpx;
  height: 55rpx;
}

/* 密码输入框 */
.v1 .v2 .passwordCs input {
  font-size: 25rpx;
  margin-top: 15rpx;
  margin-left: 30rpx;
}

/* 登录按钮容器view */
.v1 .v2 .denglu {
  width: 360rpx;
  height: 70rpx;
  position: absolute;
  left: 50%;
  bottom: 18%;
  transform: translateX(-50%);
}
.zhuce {
  width: 360rpx;
  height: 70rpx;
  position: absolute;
  left: 50%;
  bottom: 5%;
  transform: translateX(-50%);
}
/* 登录按钮 */
.v1 .v2 .denglu button , .v1 .v2 .zhuce button {
  padding: 0rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
}
